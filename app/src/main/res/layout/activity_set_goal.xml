<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetGoalActivity">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/rl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.CardView
            app:cardBackgroundColor="#AED581"
            android:id="@+id/cv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rupee_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:text="₹"/>
            <TextView
                android:id="@+id/rupee_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="30dp"
                android:layout_toEndOf="@id/rupee_symbol"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/total_saving_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Savings"
                    android:layout_below="@id/rupee_symbol"/>
                <TextView
                    android:id="@+id/days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="70dp"
                    android:layout_toEndOf="@+id/rupee_text"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Days"
                    android:layout_below="@id/days"
                    android:layout_toEndOf="@id/rupee_text"
                    android:layout_marginLeft="80dp"/>
                <ImageView

                    android:layout_marginTop="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="15dp"
                    android:layout_alignEnd="@id/days"
                    android:id="@+id/edit_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/edit"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/rupee_symbol2"
                    android:layout_marginBottom="0dp"
                    android:layout_below="@id/total_saving_text"
                    android:text="₹"
                    android:textSize="12dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/rupee_text2"
                    android:layout_marginBottom="0dp"
                    android:layout_toEndOf="@id/rupee_symbol2"
                    android:layout_below="@id/total_saving_text"
                    android:text="10"
                    android:textSize="12dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/rupee_symbol3"
                    android:layout_toLeftOf="@id/rupee_text3"
                    android:layout_marginBottom="0dp"
                    android:layout_below="@id/total_saving_text"
                    android:text="₹"
                    android:textSize="12dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/rupee_text3"
                    android:layout_marginBottom="0dp"
                   android:layout_marginRight="10dp"
                    android:layout_below="@id/total_saving_text"
                    android:text="10"
                    android:textSize="12dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ProgressBar
                    android:id="@+id/saving_progress"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    style="@style/MyProgressBarTwo"
                    android:layout_width="match_parent"
                    android:layout_below="@id/rupee_symbol2"
                    android:layout_height="wrap_content"

                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        app:cardCornerRadius="7dp"
        android:outlineProvider="bounds"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/swipe_card_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sample Text"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/swipe_card_subtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/swipe_card_text"
                    android:layout_marginTop="5dp"
                    android:text="Sample Sub text" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="33dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="73dp"
                    android:src="@drawable/celebration" />

                <Button
                    android:id="@+id/button_save"
                    android:layout_width="72dp"
                    android:layout_height="33dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="17dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/save_button"
                    android:text="Save"
                    android:textColor="#fff" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="59dp"
                    android:layout_height="36dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/button_save"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/paytm_logo" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/button_save"
                    android:layout_centerVertical="true"
                    android:text="₹" />

                <TextView
                    android:id="@+id/textview_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="-32dp"
                    android:layout_toEndOf="@+id/button_save"
                    android:text="15"
                    android:textSize="10sp" />

            </RelativeLayout>

            <View
                android:id="@+id/v1"
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="140dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@id/rl3"
                android:background="#000"
                android:padding="20dp"
                tools:ignore="NotSibling" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>